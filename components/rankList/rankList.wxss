/* components/rankList/rankList.wxss */
.rank-list {
    position: absolute;
    height: 100vh;
    width: 100%;
    top: 0;
    left: 0;
}

.mask {
    background-color: #000;
    opacity: 0.8;
    position: absolute;
    height: 100vh;
    width: 100%;
    top: 0;
    left: 0;
}

.list-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 530rpx;
    height: 750rpx;
    border-radius: 6px;
    background-color: #4D7AFF;
    z-index: 99;
}

.race-name, .rank {
    font-size: 40rpx;
    color: #fff;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    text-align: center;
}

.list-detail {
    position: relative;
    width: 490rpx;
    height: 550rpx;
    border-radius: 6px;
    background-color: #fff;
    left: 50%;
    transform: translateX(-50%);
    padding: 18rpx 40rpx 0;
}

.list-bg {
    position: absolute;
    width: 268rpx;
    height: 298rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: -1;
}

.close-btn {
    position: absolute;
    right: -48rpx;
    top: -48rpx;
    width: 48rpx;
    height: 48rpx;
}

.list-head-item {
    display: inline-block;
    font-size: 28rpx;
    color: #333;
    text-align: center;
}

.list-info {
    margin-top: 8rpx;
    height: 460rpx;
    overflow-y: auto;
}

.line {
    border-bottom: 1px solid #BEBEBE;
}

.list {
    height: 46rpx;
    color: #666;
    font-size: 24rpx;
    line-height: 46rpx;
}

.list-item {
    display: inline-block;
    text-align: center;
}

.rank-item {
    width: 60rpx;
    margin-right: 76rpx;
}

.playerNo-item {
    width: 112rpx;
    margin-right: 50rpx;
}

.rage-item {
    width: 112rpx;
}
