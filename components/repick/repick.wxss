/* pages/referee/refereeRateList/refereeRateList.wxss */
.title {
    color: #fff;
    text-align: center;
}

.repick-list {
    margin: 0 auto;
    overflow-y: auto;
    max-height: 1050rpx;
}

.list {
    position: relative;
    display: inline-block;
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
    background-color: #4a4a4a;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    font-size: 40rpx;
    margin: 20rpx 0 20rpx 60rpx;
}

.rated {
    background-color: #4D7AFF;
}

.tick {
    position: absolute;
    width: 26rpx;
    height: 22rpx;
    right: 4rpx;
    bottom: 4rpx;
}

.custom-repick-btn {
    position: absolute;
    width: 482rpx !important;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 45rpx;
    background: linear-gradient(to right, #5c3cde, #5489f5);
    font-size: 36rpx;
    color: #fff;
    font-weight: normal;
    left: 50%;
    transform: translateX(-50%);
}

.ctrl-detail-btn {
    bottom: 80rpx;
}