/* pages/player/playerOn/pairFinal/pairFinal.wxss */
.final-container {
    position: relative;
    margin-top: 40rpx;
}
.left,.right {
    vertical-align: top;
    display: inline-block;
    width: 156rpx;
}

.middle {
    vertical-align: top;
    display: inline-block;
    width: 198rpx;
}

.player-square {
    position: relative;
    display: inline-block;
    width: 156rpx;
    height: 156rpx;
    background-color: #484848;
}

.question-mark {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 46rpx;
    height: 68rpx;
    z-index: 1;
}

.final-vs {
    display: inline-block;
    width: 108rpx;
    height: 166rpx;
    margin: 0 42rpx;
}

.player-pic1,
.player-pic2 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
}

.res-word {
    position: relative;
    width: 100%;
    height: 236rpx;
    margin: 0 auto;
    display: flex;
    align-items: center;
}

.unknow {
    width: 140rpx;
    height: 140rpx;
    line-height: 140rpx;
    text-align: center;
    border-radius: 50%;
    background-color: #484848;
    font-size: 102rpx;
    color: #9C9C9C;
    margin: 0 8rpx;
}

.res-group {
    width: 504rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
}

.group-left, .group-right {
    margin: 0 8rpx;
    width: 140rpx;
    height: 140rpx;
    text-align: center;
    font-size: 102rpx;
    color: #fff;
}

.win,.lose {
    width: 140rpx;
    margin: 0 8rpx;
    font-size: 74rpx;
    font-weight: 200;
    /* line-height: 236rpx; */
}

.once-more {
    position: absolute;
    width: 326rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #656565;
    font-size: 74rpx;
}

.win {
    color: #ec3c8d;
}

.lose {
    color: #557FF1;
}