/* pages/player/playerOn/playerOn.wxss */
@import "/components/rankList/rankList.wxss";
.info {
    width: 710rpx;
    height: 340rpx;
    position: relative;
    width: 710rpx;
    margin: 0 auto;
}

.user-bg {
    position: absolute;
    width: 710rpx;
    height: 340rpx;
    top: 0;
    left: 0;
}

.ranking {
    position: absolute;
    top: 0;
    left: 0;
    width: 710rpx;
    height: 340rpx;
    font-size: 204rpx;
    color: #fff;
    text-align: center;
}

.name {
    position: absolute;
    color: #fff;
    font-size: 40rpx;
    top: 30rpx;
    left: 30rpx;
    font-weight: 400;
}

.status {
    top: 40rpx;
    right: 30rpx;
}

.describe {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    color: #9E9E9E;
    font-size: 24rpx;
}

.race-status {
    position: relative;
    margin-top: 40rpx;
}

.process-btn {
    position: absolute;
    height: 68rpx;
    width: 68rpx;
    border-radius: 50%;
    background-color: #557FF1;
    top: 200rpx;
    right: 0;
    z-index: 9;
}
.process-btn-pic {
    position: absolute;
    height: 50rpx;
    width: 50rpx;
    background-color: #557FF1;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.race-status-head {
  height: 38rpx;  
} 

.race-name {
    position: absolute;
    width: 540rpx;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    font-size: 36rpx;
    line-height: 1;
    color: #FFFFFF;
    text-align: center;
}

.race-left, .race-right {
    position: absolute;
    top: 0;
    height: 38rpx;
    width: 40rpx;
}

.race-left {
    left: 20rpx;
}

.race-right {
    right: 20rpx;
}

.race-left-inner,.race-right-inner {
    height: 38rpx;
    width: 40rpx;
}

.race-detail {
    position: relative;
    display: table;
    height: 674rpx;
    width: 100%;
    text-align: center;
    font-size: 52rpx;
    color: #A5A5A5;
}

.race-detail-inner {
    height: 674rpx;
    width: 100%;
    display: table-cell;
    vertical-align: middle;
    white-space: pre-wrap;
    text-align: center;
}

.rank-list-btn {
    position: absolute;
    height: 68rpx;
    width: 68rpx;
    top: 60rpx;
    right: 0;
    z-index: 9;
}

.race-info {
    color: #777777;
    font-size: 26rpx;
    text-align: center;
    height: 34rpx;
}

.race-info-name {
    margin-right: 28rpx;
}

.opacity6 {
    opacity: 0.6;
}