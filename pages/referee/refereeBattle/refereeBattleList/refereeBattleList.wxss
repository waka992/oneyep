/* pages/referee/refereeBattle/refereeBattleList/refereeBattleList.wxss */
.bgo {
    background-color: rgba(0,0,0,0);
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    height: 100vh;
    width: 750rpx;
    opacity: 0.6;
    background-color: rgba(0,0,0,.7);
    z-index: -1;
}

.rate-head2 {
    position: absolute;
    top: 0;
    width: 100%;
    color: #fff;
    font-size: 34rpx;   
    padding:0 40rpx;
    height: 48rpx;
    margin-top: 40rpx;
}

.list-pic {
    width: 40rpx;
    height: 30rpx;
    float: right;
    vertical-align: middle;
    margin-top: 10rpx;
}

.title {
    vertical-align: middle;
}

.rate-list {
    flex: 1;
    position: relative;
}

.reback-btn {
    text-align: center;
    float: right;
}

.back-pic {
    width: 40rpx;
    height: 30rpx;
}

.reback-word {
    vertical-align: middle;
    float: right;
    margin-left: 10rpx;
    font-size: 34rpx;
}

.referee-battle-lists {
    position: absolute;
    top: 128rpx;
    width: 100%;
}

.list-item {
    display: flex;
    width: 100%;
    height: 106rpx;
    text-align: center;
    background-color: #232425;
    align-items: center;
    justify-content: center;
    margin-top: 20rpx;
}

.res-icon {
    width: 48rpx;
    height: 42rpx;
    vertical-align: middle;
}

.vs-pic {
    width: 58rpx;
    height: 48rpx;
    margin: 0 30rpx;
}

.group-no {
    width: 108rpx;
    height: 66rpx;
    color: #fff;
    font-size: 40rpx;
    font-family:'FZYaSongS-B-GB';
    margin: 40rpx;
}

.group-no,
.group1,
.group2,
.vs-pic {
    display: inline-block;
    vertical-align: middle;
}